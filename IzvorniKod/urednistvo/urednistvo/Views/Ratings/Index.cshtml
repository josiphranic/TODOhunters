@model IEnumerable<urednistvo.Models.Rating>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text.Title)
        </th>
        <th>
            Author
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebPublishable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SectionTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Text.Title, "Details/" + item.Text.TextId, "Text")
        </td>
        <td>
            @Html.ActionLink(item.User.UserName, "Details/" + item.User.UserId, "User")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebPublishable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SectionTitle)
        </td>
        <td>
            @Html.ActionLink("All ratings", "Details/" + item.Text.TextId, "Ratings")
        </td>
    </tr>
}

</table>
