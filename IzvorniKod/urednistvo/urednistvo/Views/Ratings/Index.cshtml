@model IEnumerable<urednistvo.Models.Rating>

@{
    ViewBag.Title = "Tekstovi";
}

<h2>Tekstovi</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Naslov
        </th>
        <th>
            Autor
        </th>
        <th>
            Objaviti na web
        </th>
        <th>
            Ocjena
        </th>
        <th>
            Podlistak
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Text.Title, "Details/" + item.Text.TextId, "Text")
        </td>
        <td>
            @Html.ActionLink(item.User.UserName, "Details/" + item.User.UserId, "User")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebPublishable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SectionTitle)
        </td>
        <td>
            @Html.ActionLink("Sve ocjene", "Details/" + item.Text.TextId, "Ratings")
        </td>
    </tr>
}

</table>
