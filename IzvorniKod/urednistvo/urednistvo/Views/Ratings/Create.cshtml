@model urednistvo.Models.Rating
@{
    ViewBag.Title = "Dodaj ocjenu";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dodaj ocjenu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Objaviti na web</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownListFor(model => model.WebPublishable, new List<SelectListItem>
                        {new SelectListItem {Text = "Za", Value = "True", Selected = true},
                        new SelectListItem {Text = "Protiv", Value = "False" }
                   });
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ocjena</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Rate, (IEnumerable<SelectListItem>)ViewBag.DropDownListRates, new { @class = "dropdown" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Podlistak</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SectionId, (IEnumerable<SelectListItem>)ViewBag.DropDownListSections, new { @class = "dropdown" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ocijeni" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Povratak na listu tekstova", "Index")
</div>
