@model IEnumerable<urednistvo.ModelsView.Textual.SectionView>

@{
    ViewBag.Title = "Index";
}

<h2>Svi podlistci</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfTexts)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Details/" + item.SectionId, "Sections")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfTexts)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SectionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SectionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SectionId })
        </td>
    </tr>
}

</table>
