@model urednistvo.Models.Comment

@{
    ViewBag.Title = "Dodaj komentar";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dodaj komentar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Komentar</label>
            <div class="col-md-10" style="height:100px">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @style = "height: 100%; max-width: 90% !important" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na listu komentara", "Index")
</div>
