@model List<urednistvo.ModelsView.Textual.CommentView>

@{
    ViewBag.Title = "ByText";
}

<h2>Po tekstu</h2>

<table class="table">
    <tr>
        <th>
            Autor
        </th>
        <th>
            Sadržaj
        </th>
        <th>
            Ažurirano
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var comment in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@comment.Username + " ", "Details/" + @comment.UserId, "User")
            </td>
            <td>
                @Html.DisplayFor(modelItem => comment.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comment.Time)
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Uređivanje", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Povratak na listu korisnika", "Index")
</p>
