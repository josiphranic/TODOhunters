@model List<urednistvo.ModelsView.Textual.CommentView>

@{
    ViewBag.Title = "ByText";
}

<h2>ByUser</h2>

<table class="table">
    <tr>
        <th>
            Text title
        </th>
        <th>
            Content
        </th>
        <th>
            Time
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var comment in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@comment.TextTitle + " ", "Details/" + @comment.TextId, "Text")
            </td>
            <td>
                @Html.DisplayFor(modelItem => comment.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comment.Time)
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
