<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Naš list</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Naš list", "Index", "Home", new { area = "" }, new { @class = "navbar-brand"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><span class="glyphicon glyphicon-home icon" onclick="goHome()"></span></li>
                    <li><span class="glyphicon glyphicon-inbox icon" onclick="goNotification()"></span></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Naš list
                <span class="glyphicon glyphicon-asterisk"></span>
                @Html.ActionLink("TODOHunters", "About", "Home")
                <span class="glyphicon glyphicon-asterisk"></span>
                @Html.ActionLink("Kontakt", "Contact", "Home")
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
    function goHome() {
        window.location.href = '@Url.Action("Index", "Home")';
    }
    function goNotification() {
        window.location.href = '@Url.Action("Index", "Notification")';
    }
</script>
<style>
    .icon {
        top: 18px;
        color: white;
        font-size: 20px;
        padding-left: 22px;
    }
    .icon:hover {
        color: black;
        cursor: pointer;
    }
</style>
