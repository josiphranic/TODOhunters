<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Naš list</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Naš list", "Index", "Home", new { area = "" }, new { @class = "navbar-brand"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><span class="glyphicon glyphicon-home icon" title="Početna" onclick="goHome()"></span></li>
                    <li><span class="glyphicon glyphicon-list icon" title="Tekstovi" onclick="gotoTexts()"></span></li>
                    <li><span class="glyphicon glyphicon-user icon" title="Korisnici" onclick="gotoUsers()"></span></li>
                    @if (Session["UserID"] != null)
                    {
                        <li><span class="glyphicon glyphicon-envelope icon" title="Obavijesti" onclick="gotoNotifications()"></span></li>
                        <li><span class="glyphicon glyphicon-upload icon" title="Upload" onclick="upload()"></span></li>
                    }
                    @if ((string)Session["Role"] == "Lector")
                    {
                        <li><span class="glyphicon glyphicon-pencil icon" title="Lektoriraj" onclick="gotoForLectoring()"></span></li>
                    }
                    @if ((string)Session["Role"] == "Graphic editor")
                    {
                        <li><span class="glyphicon glyphicon-film icon" title="Graficki uredi" onclick="gotoForGraphEdit()"></span></li>
                    }

                    <li><span class="glyphicon glyphicon-phone-alt icon" title="Kontakt" onclick="gotoContact()"></span></li>
                    <li><span class="glyphicon glyphicon-book icon" title="Arhiva" onclick="gotoArchive()"></span></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="info-bar" class="info-bar">
        <span class="glyphicon glyphicon-info-sign"></span>
        <font color="black">@TempData["Message"]</font>
        <span class="glyphicon glyphicon-remove" onclick="hide()"></span>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Naš list
                <span class="glyphicon glyphicon-asterisk"></span>
                <a href='@Url.Action("About","Home")'>TODOHunters</a>
                <span class="glyphicon glyphicon-asterisk"></span>
                <a href='@Url.Action("Contact","Home")'>Kontakt</a>
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
    window.onload = checkInfos;
    function checkInfos() {
        var success = @((TempData["Message"] != null).ToString().ToLower());
        if(success){
            document.getElementById('info-bar').style.visibility = 'visible';
            $("#info-bar").delay(3200).fadeOut(300);
        }
    }
    function goHome() {
        window.location.href = '@Url.Action("Index", "Home")';
    }
    function gotoNotifications() {
        window.location.href = '@Url.Action("Index", "Notification")';
    }
    function gotoTexts() {
        window.location.href = '@Url.Action("Index", "Text")';
    }
    function gotoUsers() {
        window.location.href = '@Url.Action("Index", "User")';
    }
    function upload() {
        window.location.href = '@Url.Action("Create", "Text")';
    }
    function hide() {
        $('#info-bar').fadeOut();
        document.getElementById('info-bar').style.visibility = 'hidden';
    }
    function gotoForLectoring() {
        window.location.href = '@Url.Action("ForLectoring", "Text")';
    }
    function gotoForGraphEdit() {
        window.location.href = '@Url.Action("ForGraphicEditing", "Text")';
    }
    function gotoContact() {
        window.location.href = '@Url.Action("Contact", "Home")';
    }
</script>
<style>
    .info-bar{
        position: relative;
        top: 12px;
        background-color:lightsalmon;
        visibility: hidden;
    }
    .icon {
        top: 18px;
        color: white;
        font-size: 20px;
        padding-left: 22px;
    }
    .icon:hover {
        color: black;
        cursor: pointer;
    }
</style>
