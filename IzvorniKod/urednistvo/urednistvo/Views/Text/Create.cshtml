@model urednistvo.Models.Text

@{
    ViewBag.Title = "Dodaj tekst";
}
//Dodati da se ne dodaje text ako si neregistriran

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dodaj tekst</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Naslov</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required="required" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Podnaslov</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subtitle, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.Subtitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Sadržaj</label>
            <div class="col-md-10" style="height:200px">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @style = "height: 100%; max-width: 90% !important", required = "required" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Željeni podlistak(byauthotid?!)</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.WantedSectionByAuthorId, (IEnumerable<SelectListItem>)ViewBag.DropDownList, "Select wanted section", new { @class = "dropdown" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na popis tekstova", "Index")
</div>

<style>
    .dropdown {
        width: 20%;
        height: 46px;
        display: block;
        border: 1px solid #dfd7ca;
        border-radius: 4px;
    }
</style>
