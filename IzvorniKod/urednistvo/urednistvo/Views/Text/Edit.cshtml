@model urednistvo.Models.Text

@{
    ViewBag.Title = "Uređivanje teksta";
}

<h2>Uređivanje teksta "@Model.Title"</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tekst</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TextId)

        <div class="form-group">
            <label class="control-label col-md-2">Sadržaj</label>
            <div class="col-md-10" style="height:350px">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @style = "height: 100%; max-width: 90% !important" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na listu tekstova", "Index")
</div>
