@model IEnumerable<urednistvo.ModelsView.UserView>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Message</h2>

<table class="table">
    <tr>
        <th>
            Ime
        </th>
        <th>
            Prezime
        </th>
        <th>
            Korisničko ime
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Uloga
        </th>
        <th>Tekstovi</th>
    </tr>

@foreach (var user in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => user.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => user.LastName)
        </td>
        <td>
            @Html.ActionLink(@user.UserName + " ", "Details/" + @user.UserId, "User")
        </td>
        <td>
            @Html.DisplayFor(modelItem => user.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => user.Role)
        </td>
        <td>
            @Html.ActionLink("Tekstovi", "ByAuthor/" + @user.UserId, "Text")
        </td>
    </tr>
}

</table>