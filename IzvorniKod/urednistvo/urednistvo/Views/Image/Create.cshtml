@model urednistvo.Models.Image

@{
    ViewBag.Title = "Dodavanje";
}

<h2>Dodaj sliku</h2>

@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Slika</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Naziv slike</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="file">Predaj sliku:</label>
            <input class="col-md-10" type="file" name="file" id="file" style="padding-top: 9px;" />
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="file">Tekstovi:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TextId, (IEnumerable<SelectListItem>)ViewBag.DropDownList, "Odaberite tekst", new { @class = "dropdown" })
                @Html.ValidationMessageFor(model => model.TextId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Priloži sliku" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

        <div>
            @Html.ActionLink("Povratak na slike", "Index")
        </div>
<style>
    .dropdown {
        width: 20%;
        height: 46px;
        display: block;
        border: 1px solid #dfd7ca;
        border-radius: 4px;
    }
</style>
