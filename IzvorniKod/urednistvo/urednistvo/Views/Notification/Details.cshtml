@{
    ViewBag.Title = "Detalji obavijest";
}

<h2>Detalji</h2>

<div class="form-horizontal">
    
    <div class="form-group">
        <div class="col-md-10">@ViewBag.Message</div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-1">Naslov</label>
        <div class="control-label pull-left">
            @Model.Title
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-1">Sadržaj</label>
        <div class="control-label pull-left">
            @Model.Content
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-1">Ažurirano</label>
        <div class="control-label pull-left">
            @Model.Time
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Povratak na listu obavijesti", "Index")
</div>